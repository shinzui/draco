{
  "provisioners" : [{
      "type": "shell",
      "script": "./packer/base.sh",
      "environment_vars": [
        "PROJECT={{user `project`}}",
        "ZONE={{user `zone`}}"
      ]
 }],
 "builders" :
  [
    {
      "type" : "googlecompute",
      "project_id" : "{{user `project`}}",
      "source_image_family": "ubuntu-1604-lts",
      "zone": "{{user `zone`}}",
      "ssh_username" : "ubuntu",
      "image_name" : "draco-base",
      "image_family" : "draco-images",
      "instance_name" : "draco-{{uuid}}",
      "machine_type" : "n1-standard-1",
      "disk_size": "50",
      "disk_type" : "pd-ssd"
    }
  ]
}
